<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6">
        <h1>
          <%=image_tag @user.image_url,:size =>'150x150' if @user.image_url? %>
          <%= @user.user_name%>
        </h1>
      <%if current_user?(@user)  %>
      <%= button_to "アカウント削除", user_path(@user), :method => :delete, :class => 'btn btn-danger col-md-3' %>
      <% end %>
    </div>    
    <div class="col-sm-6">
      <ul>
        <h2>スケジュール</h2>
        <% if @user.day_schedule.first.present? %>
        <%= button_to "予定を見る", schedule_path(@user.day_schedule.first.id), :method => :get, :class => 'btn btn-primary' %>
        <% end %>
        <% if current_user.day_schedule.first.present? && current_user?(@user) %>
          <br>
          <%= button_to "予定を追加する", new_schedule_time_schedule_path(current_user.day_schedule.first.id), :method => :get, :class => 'btn btn-default' %>
          <br>
          <%= button_to "予定削除",schedule_url(current_user.day_schedule.first.id), :confirm => "本当に削除しますか?", :method => :delete, :class => 'btn btn-danger col-md-3 '  %>
       <% end %>
      </ul>
    </div>
  </div>
</div>